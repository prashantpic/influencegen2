<odoo>
    <data>
        <template id="portal_campaign_detail_page" name="Campaign Details">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs" t-value="[
                    {'url': '/my/dashboard', 'text': _t('Dashboard')},
                    {'url': '/my/campaigns', 'text': _t('Campaigns')},
                    {'url': '#', 'text': campaign.name}
                ]"/>
                <t t-call="portal.portal_search_panel">
                     <t t-set="title">
                        <h1 class="mb-0" t-field="campaign.name"/>
                    </t>
                </t>

                <div class="container mt-4">
                    <div t-if="error_message" class="alert alert-danger" role="alert">
                        <t t-esc="error_message"/>
                    </div>
                    <div t-if="success_message" class="alert alert-success" role="alert">
                        <t t-esc="success_message"/>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h4 class="mb-0"><t t-esc="campaign.name"/></h4>
                            <small class="text-muted"><t t-esc="_t('By %s', campaign.brandClient)"/></small>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5><t t-esc="_t('Campaign Description')"/></h5>
                                    <p t-out="campaign.description"/>

                                    <h5><t t-esc="_t('Campaign Goals')"/></h5>
                                    <p t-out="campaign.goals"/>

                                    <h5><t t-esc="_t('Content Requirements')"/></h5>
                                    <div t-out="campaign.contentRequirements" class="content-requirements"/>

                                    <h5 class="mt-3"><t t-esc="_t('Usage Rights')"/></h5>
                                    <p t-out="campaign.usageRights"/>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title"><t t-esc="_t('Key Information')"/></h5>
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item"><strong><t t-esc="_t('Status:')"/></strong> <span t-field="campaign.status"/></li>
                                                <li class="list-group-item"><strong><t t-esc="_t('Compensation:')"/></strong> <span t-field="campaign.compensationModel"/> <t t-if="campaign.compensation_details"> (<t t-esc="campaign.compensation_details"/>)</t></li>
                                                <li class="list-group-item"><strong><t t-esc="_t('Start Date:')"/></strong> <span t-field="campaign.startDate" t-options='{"widget": "date"}'/></li>
                                                <li class="list-group-item"><strong><t t-esc="_t('End Date:')"/></strong> <span t-field="campaign.endDate" t-options='{"widget": "date"}'/></li>
                                                <li class="list-group-item"><strong><t t-esc="_t('Submission Deadline:')"/></strong> <span t-field="campaign.submissionDeadline" t-options='{"widget": "date"}'/></li>
                                            </ul>
                                            <t t-if="can_apply">
                                                <a t-attf-href="/my/campaigns/#{campaign.id}/apply" class="btn btn-success w-100 mt-3"><i class="fa fa-check-circle me-1"/> <t t-esc="_t('Apply to this Campaign')"/></a>
                                            </t>
                                            <t t-elif="application_status">
                                                <div t-if="application_status == 'submitted'" class="alert alert-info mt-3" role="alert"><t t-esc="_t('You have applied to this campaign. Status: Submitted.')"/></div>
                                                <div t-if="application_status == 'approved'" class="alert alert-success mt-3" role="alert"><t t-esc="_t('Your application was approved! Check your active campaigns.')"/></div>
                                                <div t-if="application_status == 'rejected'" class="alert alert-danger mt-3" role="alert"><t t-esc="_t('Your application was not approved for this campaign.')"/></div>
                                            </t>
                                            <t t-else="">
                                                 <div class="alert alert-warning mt-3" role="alert"><t t-esc="_t('Applications for this campaign are currently closed or you do not meet the criteria.')"/></div>
                                            </t>
                                        </div>
                                    </div>
                                    <div t-if="campaign.targetCriteria_display" class="mt-3 card">
                                         <div class="card-body">
                                            <h5 class="card-title"><t t-esc="_t('Target Influencer Criteria')"/></h5>
                                            <p t-out="campaign.targetCriteria_display"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                     <div class="mt-3">
                        <a href="/my/campaigns" class="btn btn-secondary"><i class="fa fa-arrow-left me-1"/> <t t-esc="_t('Back to Campaign Discovery')"/></a>
                    </div>
                </div>
                <style>
                    .content-requirements ul {
                        padding-left: 20px;
                    }
                    .content-requirements li {
                        margin-bottom: 0.5rem;
                    }
                </style>
            </t>
        </template>
    </data>
</odoo>