<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="InfluenceGen.Odoo.Shared.UI.Components.LoadingIndicator" owl="1">
        <div t-att-class="indicatorClass">
            <div class="o_loading_spinner">
                <!-- Simple CSS spinner -->
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
            <t t-if="props.message">
                <div class="o_loading_message mt-2" t-esc="props.message"/>
            </t>
        </div>
    </t>
</templates>