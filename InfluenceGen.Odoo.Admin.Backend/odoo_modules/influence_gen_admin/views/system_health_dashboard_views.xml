<odoo>
    <data>
        <record id="view_influence_gen_system_health_dashboard" model="ir.ui.view">
            <field name="name">influence.gen.system.health.dashboard</field>
            <field name="model">ir.actions.client</field> <!-- Using a client action model for custom QWeb dashboard -->
            <field name="tag">influence_gen_admin.system_health_dashboard_tag</field> <!-- Custom tag for JS widget -->
            <field name="arch" type="xml">
                <dashboard>
                    <!-- This dashboard will be rendered by a custom QWeb template and JavaScript. -->
                    <!-- The actual content will be fetched via the controller. -->
                    <group string="System Health Overview" col="2">
                         <div id="api_error_rate_placeholder" class="o_box">
                            <h3>API Error Rates</h3>
                            <p>Loading API Error Rate data...</p>
                        </div>
                         <div id="n8n_queue_length_placeholder" class="o_box">
                            <h3>N8N Workflow Queues</h3>
                            <p>Loading N8N Queue Length data...</p>
                        </div>
                         <div id="ai_service_availability_placeholder" class="o_box">
                            <h3>AI Service Availability</h3>
                            <p>Loading AI Service Status...</p>
                        </div>
                         <div id="server_resource_utilization_placeholder" class="o_box">
                            <h3>Server Resource Utilization</h3>
                            <p>Loading Server Resource data (CPU, Memory, Disk)...</p>
                        </div>
                         <div id="db_performance_placeholder" class="o_box">
                            <h3>Database Performance</h3>
                            <p>Loading DB Performance Metrics...</p>
                        </div>
                    </group>
                </dashboard>
            </field>
        </record>

        <!-- Client Action to render the dashboard -->
        <record id="action_influence_gen_system_health_dashboard_client" model="ir.actions.client">
            <field name="name">System Health Dashboard</field>
            <field name="tag">influence_gen_admin.system_health_dashboard_tag</field>
        </record>


        <!-- Action Window to open the dashboard (can also be client action) -->
        <record id="action_influence_gen_system_health_dashboard" model="ir.actions.act_window">
            <field name="name">System Health Dashboard</field>
            <!--
                If using a custom model for the dashboard, set res_model here.
                For pure QWeb/JS dashboard, a client action might be more direct.
                Let's assume for now it's a client action.
            -->
            <field name="res_model">ir.actions.client</field>
            <field name="view_mode">form</field> <!-- Not really a form, but dashboard tag is used -->
            <field name="target">main</field>
             <field name="tag">influence_gen_admin.system_health_dashboard_tag</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    System Health Dashboard
                </p><p>
                    Monitor key system health metrics and operational status.
                    Data is fetched dynamically.
                </p>
            </field>
        </record>

        <!--
        TODO: Create a JS file (e.g., static/src/js/system_health_dashboard.js)
        and a QWeb template (e.g., static/src/xml/system_health_dashboard_templates.xml)
        to handle the rendering and data fetching for the 'influence_gen_admin.system_health_dashboard_tag'.
        The JS would call the controller endpoint '/influence_gen/admin/system_health_data'.
        This part is more complex and involves frontend assets not fully detailed in the current SDS scope for pure XML generation.
        -->

    </data>
</odoo>